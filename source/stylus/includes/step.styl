.step 
  padding-left 13px
  padding-right 31px
  position relative
  @media $md 
    margin-right auto 
    margin-bottom 30px 
  @media $lg 
    margin-left 15px
    display flex 
    margin-right 0
    margin-bottom 56px

.step:nth-child(2n)
  @media $lg 
    margin-top 17px 

.step:nth-child(3) 
  @media $lg 
    margin-left 46px
    margin-right 17px

.step:nth-child(1)::before
  @media $lg 
    content ''
    background-image url("data:image/svg+xml,%3Csvg width='247' height='47' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='.37' d='M246 41.174C112.088 66.984 156.11-22.86 1 7' stroke='%23E6E6E6' stroke-width='1.5' stroke-dasharray='9 4'/%3E%3C/svg%3E")
    width 247px 
    height 47px 
    position absolute 
    top 16px 
    right -41px

.step:nth-child(3)::before  
  @media $lg 
    content ''
    background-image url("data:image/svg+xml,%3Csvg width='247' height='47' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='.37' d='M246 41.174C112.088 66.984 156.11-22.86 1 7' stroke='%23E6E6E6' stroke-width='1.5' stroke-dasharray='9 4'/%3E%3C/svg%3E")
    width 247px 
    height 47px 
    position absolute 
    top 26px 
    right -58px

.step:nth-child(3)::after  
  @media $lg 
    content ''
    background-image url("data:image/svg+xml,%3Csvg width='465' height='64' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='.37' d='M1.5 63.5C22 32.5 74 5.934 179.5 15c105.5 9.066 184 54 285-14' stroke='%23E6E6E6' stroke-width='1.5' stroke-dasharray='9 4'/%3E%3C/svg%3E")
    width 465px 
    height 64px 
    position absolute 
    top -71px 
    left 128px

.step__image-container 
  position relative
  border 2px solid $c-accent 
  width 195px 
  height 130px
  margin-left 39px
  margin-bottom 42px
  &::before 
    position absolute 
    bottom -22px 
    left -22px 
    z-index 1
    display flex 
    flex-direction row 
    justify-content center
    align-items center
    counter-increment step 
    content counter(step)
    font-family "Ubuntu", "Arial", sans-serif
    font-weight 500 
    color $c-accent
    font-size 28px 
    line-height 32px 
    border-radius 50%
    background $c-white 
    width 40px
    height 40px
  @media $lg 
    margin-right 21px

.step__image 
  position relative 
  left -14px 
  top 10px

.step__content 
  @media $lg 
    padding-top 10px

.step__title 
  margin 0 0 10px 
  font-size 21px
  line-height 24px
  font-weight 700
  max-width 120px 

.step__description 
  font-weight 300 
  font-size 15px 
  line-height 1.3 
  margin 0 
  width 256px
  @media $lg 
    width 281px 

