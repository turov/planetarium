.social
  width 100%
  display flex
  flex-direction row 
  align-item center 
  @media $lg 
    width auto 

.social__link 
  display flex 
  flex-direction row 
  justify-content center
  flex-wrap wrap 
  align-items center 
  width 32px
  height 32px
  margin-right 12px
  transition opacity 0.4s ease 
  @media $lg 
    opacity 0.6
    &:hover 
      opacity 1