.promo__scroll
  display block 
  height 28px
  position absolute 
  z-index 1
  left 50% 
  bottom 20px 
  transform translateX(-50%)
  text-align center 
  color $c-white 
  opacity 0.5 
  text-decoration none 
  font-size 11px 
  line-height 1.4
  font-weight 400
  text-transform uppercase 
  letter-spacing 1px 
  &::before 
    content ''
    position absolute 
    width 12px 
    height 12px 
    bottom 0 
    left 50%
    transform translateX(-50%) rotate(-45deg)
    border-left 1px solid $c-white 
    border-bottom 1px solid $c-white 
    animation 0.8s linear 0s infinite scroll-it

@keyframes scroll-it
  from 
    bottom 0
  50%
    bottom -4px
  to 
    bottom 0