.promo 
  position relative
  min-height 100vh 
  background-image url("../img/introbg.jpg")
  background-repeat no-repeat 
  background-attachment fixed 
  background-size 100%
  padding-top 146px
  padding-bottom 93px
  @media $retina
    background-image url("../img/introbg@2x.jpg")
  @media $sm
    background-image url("../img/introbg@2x.jpg")
    @media $retina 
      background-image url("../img/introbg@3x.jpg")
  @media $lg 
    padding-top 226px
    background-image url("../img/lgintrobg.jpg")
    @media $retina 
      background-image url("../img/lgintrobg@2x.jpg")
  &::before 
    @media $lg 
      content ''
      background-image url('../img/kid_VR.png')
      width 430px
      height 350px 
      background-size cover 
      position absolute 
      bottom 0
      right 0
    @media $retina 
      background-image url('../img/kid_VR@2x.png')

.promo__container 
  padding 0 20px 
  @media $lg 
    padding 0
    width 1238px 
    margin 0 auto 

.promo__title 
  margin 0
  font-size 36px 
  line-height 41px 
  font-weight 400
  margin-bottom 20px
  text-align center 
  @media $lg 
    text-align left 
    font-size 96px 
    line-height 110px 
    margin-left 56px
    margin-bottom 24px

.promo__description
  margin 0
  font-size 15px 
  line-height 1.4 
  text-align center 
  margin-bottom 50px
  @media $lg 
    text-align left 
    margin-left 56px
    font-size 17px
    line-height 1.5
    width 495px 
    margin-bottom 75px

.promo__links 
  @media $md 
    display flex 
    flex-direction row 
    justify-content center 
  @media $lg 
    margin-left 56px 
    justify-content flex-start

